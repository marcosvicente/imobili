<section class="feature-section spad">
    <div class="container">
        <div class="section-title text-center">
            <h3>Featured Listings</h3>
            <p>Browse houses and flats for sale and to rent in your area</p>
        </div>
        <div class="row">
            <% @houses.each do |house| %>
                <div class="col-lg-4 col-md-6">
                    <!-- feature -->
                    <div class="feature-item">
                        <div class="feature-pic set-bg" data-setbg="<%= image_url("feature/1.jpg")%>">
                            <% if house.sell != nil  %>
                                <div class="sale-notic">Venda</div>
                            <% end %>
                            <% if house.rent != nil  %>
                                <div class="rent-notic">Aluguel</div>
                            <% end %>
                        </div>
                        <div class="feature-text">
                            <div class="text-center feature-title">
                                <h5>1963 S Crescent Heights Blvd</h5>
                                <p><i class="fa fa-map-marker"></i> <%= house.address %></p>
                            </div>

                            <div class="room-info-warp">
                                <div class="room-info">
                                    <div class="rf-left">
                                        <p><i class="fa fa-th-large"></i> <%= house.size%> mÂ²</p>
                                        <p><i class="fa fa-bed"></i> <%= house.rooms %></p>
                                    </div>
                                    <div class="rf-right">
                                        <p><i class="fa fa-car"></i> <%= house.parking %></p>
                                        <p><i class="fa fa-bath"></i> <%= house.bathrooms %></p>
                                    </div>
                                </div>
                                <div class="room-info">
                                    <div class="rf-left">
                                        <p><i class="fa fa-user"></i> Tony Holland</p>
                                    </div>

                                    <div class="rf-right">
                                        <p><i class="fa fa-clock-o"></i> 1 days ago</p>
                                    </div>

                                </div>

                            </div>

                            <a href="#" class="room-price">
                                <%= number_to_currency(house.sell, unit: "R$", separator: ",", delimiter: "") %>
                                <%= number_to_currency(house.rent, unit: "R$", separator: ",", delimiter: "") %>
                            </a>
                        </div>
                    </div>
                </div>
            <% end %>
        </div>
</section>
<!-- feature section end -->
